<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controllers.edit_profile.EditProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/backgroundshape"
                    android:layout_weight="0.30"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:padding="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/profilepic"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_110sdp"
                            android:src="@drawable/temp_detail_img" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:padding="@dimen/_5sdp"
                            android:gravity="bottom|center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/pf_name"
                                android:gravity="center"
                                style="@style/AppTheme.subtitle"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/White"
                                android:singleLine="true"
                                android:textStyle="bold"
                                android:capitalize="words"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alena Bannet" />

                            <TextView
                                android:id="@+id/pf_email"
                                android:gravity="center"
                                style="@style/AppTheme.subtitle"
                                android:textColor="@color/White"
                                android:textSize="@dimen/_14ssp"
                                android:singleLine="true"
                                android:textStyle="normal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="alenab@email.com" />

                            <Button
                                android:id="@+id/bt_editprofile"
                                style="@style/button_textstlyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/button_outlin_orange"
                                android:text="@string/edit_profile"
                                android:textColor="@color/orange" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/White"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/AppTheme.subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/phone_number" />

                        <TextView
                            style="@style/AppTheme.subtitle"
                            android:textStyle="normal"
                            android:textSize="@dimen/_14ssp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+91 568 7565 547"
                            android:layout_marginBottom="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray" />

                        <TextView
                            android:id="@+id/settings"
                            android:layout_marginTop="@dimen/_10sdp"
                            style="@style/AppTheme.subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/action_settings"
                            android:drawableTint="@color/black"
                            android:drawableEnd="@drawable/ic_back_right_24" />

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginBottom="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/privacy_policy"
                            android:layout_marginTop="@dimen/_10sdp"
                            style="@style/AppTheme.subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy"
                            android:drawableTint="@color/black"
                            android:drawableEnd="@drawable/ic_back_right_24" />

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginBottom="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/feedback"
                            android:layout_marginTop="@dimen/_10sdp"
                            style="@style/AppTheme.subtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback"
                            android:drawableTint="@color/black"
                            android:drawableEnd="@drawable/ic_back_right_24" />

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"
                            android:layout_marginBottom="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.50"
                        android:layout_gravity="bottom"
                        android:gravity="bottom|center"
                        android:paddingBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bt_changepws"
                            style="@style/button_textstlyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_outlin_orange"
                            android:text="@string/change_pws"
                            android:textColor="@color/orange" />

                        <Button
                            android:id="@+id/bt_logout"
                            style="@style/button_textstlyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_dark_orange"
                            android:text="@string/menu_logout" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>