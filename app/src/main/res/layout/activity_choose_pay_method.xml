<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".controllers.choosepayment.ChoosePayMethod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/AppTheme.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="24dp"
            android:text="@string/choosepaymethod_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cardpay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_outlin_orange"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pay" />

                <TextView
                    style="@style/AppTheme.cardbttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:cursorVisible="false"
                    android:gravity="center"

                    android:text="@string/Creditcard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/ic_back_right_24"
                        android:tint="@color/orange" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/samsungpay"
                android:layout_width="match_parent"
                android:backgroundTint="@color/light_blue1"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_outlin_orange"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_samsung_pay" />

                <TextView
                    style="@style/AppTheme.cardbttitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:text="@string/SamsungPay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:src="@drawable/ic_back_right_24"
                        android:tint="@color/White" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>